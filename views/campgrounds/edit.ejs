<% include ../partials/header %>
<div class="row text-center">
<h1> Edit <%= camp.name %></h1>
<div style="width:30%;margin:0 auto;">
<form action="/campgrounds/<%= camp._id %>?_method=PUT" method="POST">
    <div class="form-group">
        <label for="name">Camp Name</label>
    <input class="form-control" type="text" name="campground[name]" value="<%= camp.name %>">
    </div>
    <div class="form-group">
        <label for="location">Location</label>
        <input class="form-control" type="text" name="location" id="location" value="<%= camp.location %>">
    </div>
    <div class="form-group">
        <label for="price">Price</label>
    <input class="form-control" type="number" name="campground[price]" value="<%= camp.price %>" min="0.01" step="0.01">
    </div>
    <div class="form-group">
        <label for="image">Image URL</label>
    <input class="form-control" type="text" name="campground[image]" value="<%= camp.image %>">
    </div>
    <div class="form-group">
        <label for="description">Description</label>
    <input class="form-control" type="text" name="campground[description]" value="<%= camp.description %>">
    </div>
    <div class="form-group">
    <input class="btn btn-lg btn-primary btn-block" type="submit">
    </div>
</form>
<a href="/campgrounds/<%= camp._id %>">back</a>

</div>

</div>

<% include ../partials/footer %>